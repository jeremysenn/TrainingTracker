- title "Client"

%p
  %strong First Name:
  = @client.first_name
%p
  %strong Last Name:
  = @client.last_name

  =# @client.user_id
%p
  %strong Address:
  = @client.address
%p
  %strong Country:
  = @client.country
%p
  %strong Email:
  = @client.email
%p
  %strong Phone:
  = @client.phone

%p
  = link_to "Edit", edit_client_path(@client)
  =# link_to "Destroy", @client, :confirm => 'Are you sure?', :method => :delete
  =# link_to "View All", clients_path
