= form_for @client do |f|
  = f.error_messages
  %p
    = f.label :first_name
    %br
    = f.text_field :first_name
  %p
    = f.label :last_name
    %br
    = f.text_field :last_name
  %p
    =# f.label :user_id
    =# f.text_field :user_id
    = f.hidden_field :user_id, :value => current_user.id
  %p
    = f.label :address
    %br
    = f.text_field :address
  %p
    = f.label :country
    %br
    = f.text_field :country
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :phone
    %br
    = f.text_field :phone
  - if current_user.coach?
    %p
      = f.label "Irritable Bowel Syndrome (IBS)"
      %br
      = f.check_box :ibs
  %p
    = f.submit
