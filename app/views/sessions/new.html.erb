<% title "Senn Performance Tracker" %>

<p>Don't have an account? <%= link_to "Sign up!", signup_path %></p>

<div class="grey_box round">
<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :login, "Username or Email Address" %><br />
    <%= text_field_tag :login, params[:login] %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <p><%= submit_tag "Log in" %></p>
<% end %>
</div>

<%=  link_to_function 'Learn More', "toggle_learn_more(this)" %>
