- title "Please log in here"

= link_to "Forgot Password", new_password_reset_path
%br
= link_to "New Account", 'http://www.profitnesssuccess.com/sign-up.html'
#= link_to "New Personal Trainer Account", signup_path(:group_id => 5)
#= link_to "New Personal Training Client Account", signup_path(:group_id => 6)

#groups
  .group
    = form_tag sessions_path, :id => "log_in_form" do
      .name
        Existing Users Log In
      .details
        = label_tag :login, "Username or Email"
        = text_field_tag :login, params[:login], :style => "margin-left: 20px; height:20px;", :class => "span-5 round"
        = label_tag :password
        = password_field_tag :password, nil, :style => "margin-left: 20px; height:20px;", :class => "span-5 round"
        .signup
          =# link_to 'Log in', "#", :onclick=>"$('#log_in_form').submit()"
          = submit_tag "Log in"
  .clear