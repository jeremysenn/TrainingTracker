- title "Account information"
= link_to image_tag("EditIcon.jpg", :alt => "Edit information"), edit_user_path(@user), :title => "Edit", :class => 'tool-tip'
- if @user.is_gym
  %p
    %strong Gym Name:
    = @user.gym.name unless @user.gym.name.blank?
%p
  %strong First Name:
  = @user.first_name unless @user.first_name.blank?
%p
  %strong Last Name:
  = @user.last_name unless @user.last_name.blank?

%p
  %strong User Name:
  = @user.username
%p
  %strong Email:
  = @user.email

  =# "Coach" if @user.coach?
  =# "User" if !@user.coach
%p
  =# link_to "Exercises", exercises_path, :title => "Go to your exercise list", :class => "tool-tip"
%p
  =# link_to "Workouts", workouts_path, :title => "Go to your workout list", :class => "tool-tip"

%p
- if @user.coach? and !@user.logo_image_url.blank?
  %strong Logo Image:
  %p= image_tag @user.logo_image_url(:thumb).to_s
- elsif @user.coach? and @user.logo_image_url.blank?
  %strong Logo Image:
  None
  =# link_to "BodyComps", bodycomps_path, :title => "Go to your BodyComp list", :class => "tool-tip"
  %p
    =# link_to "Clients", clients_path, :title => "Go to your client list", :class => "tool-tip"
  
