= link_to image_tag("orange_plus_icon.png", :alt => "New"), new_trainer_path, :title => 'Add new trainer', :class => 'tool-tip'
%table.pretty
  %tr
    %th Name
    %th Email
    %th Username
  - for trainer in @trainers
    %tr
      %td= link_to trainer.full_name, trainer_path(trainer), :title => "Show trainer information", :class => "tool-tip"
      %td= trainer.email
      %td= trainer.user.username unless trainer.user.blank?
      